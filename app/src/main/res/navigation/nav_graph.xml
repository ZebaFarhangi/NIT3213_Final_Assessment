<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginPageFragment">


    <fragment
        android:id="@+id/loginPageFragment"
        android:name="com.example.androidappdev.login.LoginPageFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action
        android:id="@+id/action_loginPageFragment_to_dashboardFragment"
        app:destination="@id/dashboardFragment"
        app:popUpTo="@id/loginPageFragment"
        app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.androidappdev.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >


    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.androidappdev.ui.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">

        <action
            android:id="@+id/action_detailsFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>


</navigation>